<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1 class="panel-title text-center">New Job Form</h1>
      </div>
      <div class="panel-body">
        <%= form_for(@job) do |f| %>
        <div class="form-group">
          <%= f.label :title, class:'control-label' %>
          <%= f.text_field :title, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :link, class:'control-label' %>
          <%= f.text_field :link, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :location, class:'control-label' %>
          <%= f.text_field :location, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :deadline, class:'control-label' %>
          <%= f.date_field :deadline, class:'form-control' %>
        </div>
        <% if params[:format] %>
        <div class="form-group">
          <!-- <%= f.label :company_id, class:'control-label' %> -->
          <%= f.hidden_field :company_id, :value => params[:format], class:'form-control' %>
        </div>
        <% else %>
        <div class="form-group">
          <!-- <%= f.label :company_id, class:'control-label' %> -->
          <%= f.hidden_field :company_id, :value => @company.id, class:'form-control' %>
        </div>
        <% end %>
        <div class="form-group">
          <%= f.submit "Create Job", class:'btn btn-primary'%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
