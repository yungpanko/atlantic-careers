<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1 class="panel-title text-center">New Company Form</h1>
      </div>
      <div class="panel-body">
        <%= form_for(@company) do |f| %>
        <div class="form-group">
          <%= f.label :name, class:'control-label' %>
          <%= f.text_field :name, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :industry, class:'control-label' %>
          <%= f.select :industry, ['Consulting', 'Tech', 'Finance', 'Retail', 'Healthcare', 'Media/Entertainment', 'Consumer Products', 'Manufacturing', 'Other'], class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Create Company", class:'btn btn-primary'%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
